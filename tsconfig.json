{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"$src/*": ["src/*"]
		},
		"sourceMap": true /*  */,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["svelte"],
		"importHelpers": true,
		"allowJs": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.svelte"],
	"exclude": ["./node_modules/*", "./__sapper__/*", "./public/*"]
}